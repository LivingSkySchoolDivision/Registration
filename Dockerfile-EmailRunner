FROM mcr.microsoft.com/dotnet/core/runtime:3.1-buster-slim AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["LSSD.Registration.EmailRunner/LSSD.Registration.EmailRunner.csproj", "LSSD.Registration.EmailRunner/"]
COPY ["LSSD.Registration.FormGenerators/LSSD.Registration.FormGenerators.csproj", "LSSD.Registration.FormGenerators/"]
COPY ["LSSD.Registration.Model/LSSD.Registration.Model.csproj", "LSSD.Registration.Model/"]
COPY ["LSSD.Registration.Data/LSSD.Registration.Data.csproj", "LSSD.Registration.Data/"]
RUN dotnet restore "LSSD.Registration.EmailRunner/LSSD.Registration.EmailRunner.csproj"
COPY . .
WORKDIR "/src/LSSD.Registration.EmailRunner"
RUN dotnet build "LSSD.Registration.EmailRunner.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "LSSD.Registration.EmailRunner.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "LSSD.Registration.EmailRunner.dll"]